@model SEL.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>User</legend>
    <div class="pull-left">
        <div class="display-label h3">firstname</div>
        <div class="display-field">@Model.firstname</div>

        <div class="display-label h3">lastname</div>
        <div class="display-field">@Model.lastname</div>

        <div class="display-label h3">pseudo</div>
        <div class="display-field">@Model.pseudo</div>

        <div class="display-label h3">birthDate</div>
        <div class="display-field">@String.Format("{0:g}", Model.birthDate)</div>

        <div class="display-label h3">phone</div>
        <div class="display-field">@Model.phone</div>

        <div class="display-label h3">city</div>
        <div class="display-field">@Model.city</div>
    </div>

        <div id="googleMap" style="width:500px;height:380px;" class="pull-right"></div>
</fieldset>
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>

<script>
    var myCenter = new google.maps.LatLng(@Model.latitude, @Model.longitude);

        function initialize() {
            var mapProp = {
                center: myCenter,
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);

            var marker = new google.maps.Marker({
                position: myCenter,
            });

            marker.setMap(map);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
</script>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


