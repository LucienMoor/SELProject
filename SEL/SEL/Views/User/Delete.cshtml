@model SEL.Models.User

@{
    ViewBag.Title = "Delete";
}
<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
<h3 class="detailfont">Are you sure you want to delete this?</h3>
<fieldset>
    <legend class="font h2">@Model.pseudo</legend>

    <div class="display-label detailfont h3">firstname</div>
    <div class="display-field font h4">@Model.firstname</div>

    <div class="display-label detailfont h3">lastname</div>
    <div class="display-field font h4">@Model.lastname</div>

    <div class="display-label detailfont h3">birthDate</div>
    <div class="display-field font h4">@String.Format("{0:g}", Model.birthDate)</div>

    <div class="display-label detailfont h3">phone</div>
    <div class="display-field font h4">@Model.phone</div>

    <div class="display-label detailfont h3">email</div>
    <div class="display-field font h4">@Model.email</div>

    <div class="display-label detailfont h3">city</div>
    <div class="display-field font h4">@Model.city</div>
</fieldset>
@using (Html.BeginForm()) {
    <p class="font h3">
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


