@model SEL.Models.Message

@* This partial view defines form fields that will appear when creating and editing entities *@
<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
<div class="editor-label detailfont h4">
    @Html.LabelFor(model => model.title)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.title)
</div>
<div class="editor-label detailfont h4">
    @Html.LabelFor(model => model.message)
</div>
<div class="editor-field">
    <p class="detailfont h5">@ViewBag.destUserPseudo</p>
    @Html.TextAreaFor(model => model.message, new { htmlAttributes = new { @class = "form-control"} })
    @Html.ValidationMessageFor(model => model.message)
</div>
<div class="editor-label detailfont h4">
    <p class="detailfont h4">To</p>
    @Html.TextBox("dest", (string)ViewBag.destUserPseudo, new { @class = "form-control" })
</div>
