@model IEnumerable<SEL.Models.Message>

@{
    ViewBag.Title = "Index";
}
<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
<h2 class="font">Index</h2>

<p class="font h4">
    @if (Session["login"] != null)
    {
        <i class="glyphicon glyphicon-plus h5"></i>
        @Html.ActionLink("Write a message", "Create")
    }
</p>
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th class="detailfont h4">Title</th>
                <th class="detailfont h4">From</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td class="font h4">
                    @item.title
                </td>
                <td class="font h4">
                    @Html.DisplayTextFor(_ => item.sender).ToString()
                </td>
                @if (Session["login"] != null)
                {
                    <td>
                        <a href="@Url.Action("Details", new { id=item.ID})">
                            <i class="glyphicon glyphicon-eye-open h4"></i>
                        </a>
                    </td>
                }
            </tr>
        }

    </table>
</div>

